using System;
using System.Windows.Forms;

namespace AbsensiApp
{
    public partial class MainForm : Form
    {
        private string password = "123456"; // Password untuk keamanan

        public MainForm()
        {
            InitializeComponent();
        }

        private void btnAbsensi_Click(object sender, EventArgs e)
        {
            if (txtPassword.Text == password)
            {
                // Logika absensi akan ditambahkan di sini
                // Misalnya, mengambil data dari kontrol input dan melakukan operasi absensi
                // Anda juga dapat menampilkan pesan atau melakukan tindakan lain sesuai kebutuhan
                string nama = txtNama.Text;
                string tanggal = dtpTanggal.Value.ToShortDateString();

                string pesan = $"Absensi {nama} pada tanggal {tanggal} telah berhasil dicatat.";
                MessageBox.Show(pesan, "Absensi Berhasil", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            else
            {
                MessageBox.Show("Password salah! Absensi tidak dapat dilakukan.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
    }
}
